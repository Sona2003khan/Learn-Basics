public class Basic_maths_count_digit_1 {

    public static int count_digit(int n){
        int count = 0;

        while (n > 0) {
            count++;
            n = n / 10;
        }
        return count;
    }
    
    public static void main(String[] args) {
        int n = 7891;
        System.out.println(count_digit(n));  // Output: 4
    }
}

/*
Time Complexity: O(log10(n))
Space Complexity: O(1)
*/
